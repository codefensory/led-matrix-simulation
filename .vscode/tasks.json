{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "./src/**.cpp",
                "./include/Viewtrix/**.cpp",
                "-o",
                "./main",
                "-I'${workspaceFolder}/include'",
                //SFML
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                // OPENGL
                // "-ldl",
                // "-lGL",
                // "-lGLU",
                // "-lglfw3",
                // "-lX11",
                // "-lXxf86vm",
                // "-lXrandr",
                // "-lpthread",
                // "-lXi",
                "&&",
                "clear",
                "&&",
                "./main"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}